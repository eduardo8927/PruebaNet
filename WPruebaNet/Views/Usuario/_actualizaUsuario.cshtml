<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Actualizar usuario</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div id="pnlUpdateUsuario" class="container m2">
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Correo electronico:</span>
                    </div>
                    <input type="text" class="form-control" id="txtCorreo">
                    <input type="hidden" id="hfIdUsuario"/>
                </div>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Usuario:</span>
                    </div>
                    <input type="text" class="form-control" id="txtUsuario">
                </div>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Contraseña:</span>
                    </div>
                    <input type="password" minlength="8" class="form-control" id="txtPassword">
                </div>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Confirmar contraseña:</span>
                    </div>
                    <input type="password" minlength="8" class="form-control" id="txtPasswordCon">
                </div>
            </div>
        </div>

    </div>
</div>
<div class="modal-footer">
    <div class="row mt-3 mb-3">
        <div class="col-12 text-center">
            <button type="button" class="btn btn-primary mr-4" id="btnGuardar">
                <i class="fa-solid fa-floppy-disk font-25 text-white"></i> Guardar
            </button>
            <button type="button" class="btn btn-danger ml-4" id="btnCancelar" data-dismiss="modal">
                <i class="fa-solid fa-xmark font-25 text-white ml-3"></i> Cerrar
            </button>
        </div>
    </div>
</div>


