@{

    Layout = "_LayoutExterna";
    ViewBag.Title = "Registro de usuarios";
}


<div class="container-fluid mt-4 mb-4">
    <div class="card">
        <div class="card-body">
            <h3 class="text-themecolor mb-0">
                <i class="fas fa-user-shield text-secondary"></i> Datos de la cuenta
            </h3>
            <hr class="hrTitulo mb-3" />
            <form id="frmRegistro">
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Correo electronico:</span>
                            </div>
                            <input type="text" class="form-control" id="txtCorreo">
                        </div>
                    </div>
                </div>
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Usuario:</span>
                            </div>
                            <input type="text" class="form-control" id="txtUsuario">
                        </div>
                    </div>
                </div>
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Contraseña:</span>
                            </div>
                            <input type="password" minlength="8" class="form-control" id="txtPassword">
                        </div>
                    </div>
                </div>
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Confirmar contraseña:</span>
                            </div>
                            <input type="password" minlength="8" class="form-control" id="txtPasswordCon">
                        </div>
                    </div>
                </div>
                <div class="row mt-3 mb-3">
                    <div class="col-12">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rbGpoSexo" id="opcSexH" value="1">
                            <label class="form-check-label" for="opcSexH">Masculino</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="rbGpoSexo" id="opcSexM" value="2">
                            <label class="form-check-label" for="opcSexM">Femenino</label>
                        </div>
                    </div>
                </div>
            </form>

            <div class="row mt-3 mb-3">
                <div class="col-12 text-center">
                    <button type="button" class="btn btn-success mr-4" id="btnGuardar">
                        <i class="fa-solid fa-floppy-disk font-25 text-white"></i> Registrar
                    </button>
                    <button type="button" class="btn btn-danger ml-4" id="btnCancelar" onclick="window.location='@Url.Action("Login", "Acount")'">
                        <i class="fa-solid fa-xmark font-25 text-white ml-3"></i> Cancelar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdUrlAddUsr" value="@Url.Action("AddUsuario", "Usuario")" />
<input type="hidden" id="hdUrlLogin" value="@Url.Action("Login", "Acount")" />
@{
    Random rnd = new Random();
    string r = rnd.Next().ToString();
    <script src="~/js/validacion.js?v=@r"></script>
    <script src="~/js/registro.js?v=@r"></script>
}